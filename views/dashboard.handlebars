<div class="row">
  <div class="col-auto">
    <h2>Your Dashboard</h2>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary">+ New Post</button>
  </div>
</div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    
    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}, {{blog.date_created}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">Update Post</button>
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">Delete</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
